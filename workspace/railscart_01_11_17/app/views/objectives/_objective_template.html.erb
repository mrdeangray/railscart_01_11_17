

<table  class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <div class='row'>
  <div class='col-xs-2'> 

     <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Like Operaci√≥nes:
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><%=link_to 'Date', sort_by_date_objectives_path, method: :post, class: 'btn btn-warning'%></li>
        <li><%=link_to 'Name', sort_by_name_objectives_path, method: :post, class: 'btn btn-primary'%></li>
         </ul>
    </div>
  </div>

  
  

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <%if objective.completed_at.nil?%>
        <td><%= objective.title %></td>
        <td><%= link_to 'Mark As Complete', mark_as_complete_objective_path(objective), method: :post %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
    
        <% @objectives.each do |objective| %>
      <tr>
           <%if !objective.completed_at.nil?%>
        <td class='completed_task'><%= objective.title %></td>
        <td><%= link_to 'Mark As Incomplete', mark_as_incomplete_objective_path(objective), method: :post %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %></tr>
    <% end %>
    
  </tbody>
</table>

